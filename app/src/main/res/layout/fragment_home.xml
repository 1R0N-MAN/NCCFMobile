<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/nccfLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginVertical="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nccf_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/welcomeToNCCFText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/project_font_medium"
            android:textSize="30sp"
            android:text="@string/welcome_to_nccf"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:background="@drawable/rounded_corner_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nccfLogo"/>

        <TextView
            android:id="@+id/weLoveYouText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/project_font_regular"
            android:textSize="25sp"
            android:text="@string/we_love_you"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/welcomeToNCCFText"/>

        <ImageView
            android:id="@+id/welcomeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/home_image"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@id/weLoveYouText"
            />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/project_font_regular"
            android:textSize="16sp"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            app:layout_constraintTop_toBottomOf="@id/welcomeImage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>